-- =========================================================
-- New York Restaurants
-- Exploring the 'nomnom' table to find great dinner spots
-- =========================================================

-- View all available restaurants
SELECT *
FROM nomnom;

-- List all unique neighborhoods
SELECT DISTINCT neighborhood
FROM nomnom;

-- List all unique cuisine types
SELECT DISTINCT cuisine
FROM nomnom;

-- Find all Chinese restaurants
SELECT *
FROM nomnom
WHERE cuisine = 'Chinese';

-- Restaurants with a review score of 4 or higher
SELECT *
FROM nomnom
WHERE review >= 4;

-- High-end Italian restaurants
SELECT *
FROM nomnom
WHERE cuisine = 'Italian'
  AND price = '$$$';

-- Restaurants with "meatball" in their name
SELECT *
FROM nomnom
WHERE name LIKE '%meatball%';

-- Restaurants located in Midtown, Downtown, or Chinatown
SELECT *
FROM nomnom
WHERE neighborhood IN ('Midtown', 'Downtown', 'Chinatown');

-- Restaurants missing health inspection data
SELECT *
FROM nomnom
WHERE health IS NULL;

-- Top 10 highest-rated restaurants
SELECT *
FROM nomnom
ORDER BY review DESC
LIMIT 10;

-- Categorize restaurants based on review score
SELECT *,
  CASE
    WHEN review > 4.5 THEN 'Extraordinary'
    WHEN review > 4   THEN 'Excellent'
    WHEN review > 3   THEN 'Good'
    WHEN review > 2   THEN 'Fair'
    ELSE 'Poor'
  END AS rating
FROM nomnom;
